<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KyoskInterview" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>

        <item name="colorSurface">@color/surfaceColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RatingBarAppearance" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/textSecondary</item>
        <item name="colorControlActivated">@color/golden</item>
    </style>

</resources>