<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_personalisation">

        <ListPreference
            android:icon="@drawable/ic_theme"
            app:defaultValue="System Default"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/change_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/title_extras">

        <Preference
            android:icon="@drawable/ic_report_bug"
            app:summary="@string/suggest_feature_or_report_bug"
            app:key="report bug"
            app:title="@string/contact_developer" />

        <Preference
            android:icon="@drawable/ic_github"
            app:summary="@string/view_app_source_code"
            app:key="source code"
            app:title="@string/source_code" />

    </PreferenceCategory>


</PreferenceScreen>